{% case section.settings.grid %}
  {% when 2 %}
    {%- assign max_height = 530 -%}
  {% when 3 %}
    {%- assign max_height = 345 -%}
  {% when 4 %}
    {%- assign max_height = 250 -%}
  {% when 5 %}
    {%- assign max_height = 195 -%}
{% endcase %}


{% if content_for_header contains '?type=' %}
  {% assign filtertype = content_for_header| split:'?type=' | last | split:'"' | first | replace:'\/','/' | 
   replace:'%20',' ' | 
   replace:'\u0026','&'%}
  {%- assign limit = 500 -%}
{% else %}
  {% assign filtertype = '' %}
  {%- assign limit = 24 -%}
{% endif %}

{% paginate collection.products by limit %}

{% if collection.image %}
<div id="bannerBar" style="background: #fff; margin-top: -10px">
	<img src="{{collection.image | img_url: '1920x'}}"/>
	<div class="bannerLabel">{{collection.title}}</div>
</div>
{% else %}
{% endif %}
<div class="content">
	<center>
	<div class="contentInner">
{% if collection.image %}
{% else %}
	<div class="bannerLabelNoImage" style="color: #000;">{% if collection.title == "Products" %}{{collection.tags}}{% else %}{{collection.title}}{%if collection.title == 'Book' %}s{% endif %}{% endif %}</div>
{% endif %}

{% if collection.handle == "types" %}
{% else %}
{% if collection.title == "Pop Culture" or collection.title == "The Beatles" or collection.title == "Universal Monsters" or collection.title == "Star Wars" or collection.title == "Disney Fine Art" %}
      <div class="subcategories">
          <a href="/collections/pop-art"><div class="subcategory{%if collection.title == "Pop Culture" %} subcategorySelected{% endif %}">All</div></a>
          <a href="/collections/the-beatles"><div class="subcategory{%if collection.title == "The Beatles" %} subcategorySelected{% endif %}">The Beatles</div></a>
          <a href="/collections/universal-monsters"><div class="subcategory{%if collection.title == "Universal Monsters" %} subcategorySelected{% endif %}">Universal Monsters</div></a>
          <a href="/collections/star-wars"><div class="subcategory{%if collection.title == "Star Wars" %} subcategorySelected{% endif %}">Star Wars</div></a>
          <a href="/collections/disney-fine-art"><div class="subcategory{%if collection.title == "Disney Fine Art" %} subcategorySelected{% endif %}">Disney</div></a>
      </div>
{% else %}
{% if collection.title == "Fine Art" or collection.title == "Lithographs" or collection.title == "Giclée Prints" or collection.title == "Giclée on Canvas" %}
      <div class="subcategories">
          <a href="/collections/fine-art"><div class="subcategory{%if collection.title == "Fine Art" %} subcategorySelected{% endif %}">All</div></a>
          <a href="/collections/lithographs"><div class="subcategory{%if collection.title == "Lithographs" %} subcategorySelected{% endif %}">Lithographs</div></a>
          <a href="/collections/giclee-prints"><div class="subcategory{%if collection.title == "Giclée Prints" %} subcategorySelected{% endif %}">Giclée Prints</div></a>
          <a href="/collections/giclee-on-canvas"><div class="subcategory{%if collection.title == "Giclée on Canvas" %} subcategorySelected{% endif %}">Giclée on Canvas</div></a>
      </div>
{% else %}
{% if collection.title == "Books" or collection.title == "Comic Books" or collection.title == "Art Books" or collection.title == "CGC" %}
      <div class="subcategories">
          <a href="/collections/books"><div class="subcategory{%if collection.title == "Books" %} subcategorySelected{% endif %}">Books</div></a>
          <a href="/collections/comic-books"><div class="subcategory{%if collection.title == "Comic Books" %} subcategorySelected{% endif %}">Comic Books</div></a>
          <a href="/collections/art-books"><div class="subcategory{%if collection.title == "Art Books" %} subcategorySelected{% endif %}">Art Books</div></a>
          <a href="/collections/cgc"><div class="subcategory{%if collection.title == "CGC" %} subcategorySelected{% endif %}">CGC</div></a>
      </div>
{% else %}
      {% if collection.all_types.size > 1 %}      
      {% if filtertype == '' %}{% assign subcategoryclass = ' subcategory' %}{% endif %}
      <div class="subcategories">
          <a href="{{collection.url}}"><div class="subcategory{% if filtertype == '' %} subcategorySelected{% endif %}">ALL</div></a>
		{% for product_type in collection.all_types %}
		{% if product_type != '' %}
        <a href="{{collection.url}}/?type={{product_type}}"><div class="subcategory{% if filtertype == product_type %} subcategorySelected{% endif %}">{{product_type}}{%if product_type == 'Book' %}s{% endif %}</div></a>
		{% endif %}
        {% endfor %}
      </div>

	{% endif %}
{% endif %}
{% endif %}
{% endif %}
{% endif %}

      
{% for product in collection.products %}
	{% if filtertype == product.type or filtertype == '' %}
		{% if product.available == true %}
	      {% include 'product-card-grid', max_height: 250, product: product, show_vendor: section.settings.show_vendor %}
	    {% endif %}
    {% endif %}
{% endfor %}
    {% if is_empty_collection %}
      <div class="grid__item small--text-center">
        <p class="text-center">{{ 'collections.general.no_matches' | t }}</p>
      </div>
    {% endif %}
		<div style="width: 100%; foat: left; clear: both;"></div>
    {%- if paginate.pages > 1 -%}
      {% include 'pagination', paginate: paginate %}
    {%- endif -%}
	</div>
	</center>
</div>



  </div>
</div>

{% endpaginate %}



