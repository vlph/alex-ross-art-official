{% comment %}
    Renders a pagination bar

    Accepts:
    - paginate: {Object} Paginate Liquid object (required)

    Usage:
    {% include 'pagination', paginate: paginate %}
{% endcomment %}
<div class="pageination">
{% assign k = 1 %}
{% for part in paginate.parts %}
  {% if part.is_link %}
  <a href="{{part.url}}"><div class="page">{{part.title}}</div></a>
  {% else %}
  <div class="page{% if paginate.current_page == part.title %} pageSelected{% endif %}">{{part.title}}</div>
  {% endif %}
{% endfor %}
</div>
